{
  "name": "tweet-app",
  "productName": "Tweet",
  "version": "0.2.0",
  "description": "Desktop app only for tweeting. Timeline never shows up",
  "main": "main/index.js",
  "bin": {
    "tweet": "./bin/cli.js"
  },
  "scripts": {
    "build:tsc": "tsc -p . && chmod +x ./bin/cli.js",
    "build:parcel": "parcel build -o preload.js -d renderer/ --target electron renderer/index.js --no-source-maps",
    "build": "npm-run-all build:tsc build:parcel",
    "watch:tsc": "tsc -p . --watch",
    "watch:parcel": "parcel -o preload.js -d renderer/ --target electron renderer/index.js --no-source-maps",
    "watch": "npm-run-all -p watch:tsc watch:parcel",
    "cli": "node ./bin/cli.js",
    "app": "NODE_ENV=development node ./bin/cli.js --no-detach",
    "debug": "TWEET_APP_DEBUG=true NODE_ENV=development node ./bin/cli.js --no-detach",
    "prod": "node ./bin/cli.js",
    "pack": "electron-builder",
    "dist": "npm-run-all build 'pack -- --mac --linux --win'",
    "test:integ": "mocha ./test/integ",
    "test:unit": "mocha ./test/unit",
    "test": "npm-run-all test:unit test:integ",
    "nyc": "nyc mocha ./test/unit",
    "cov": "npm run nyc && nyc report --reporter html && open ./coverage/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rhysd/tweet-app.git"
  },
  "author": "rhysd <https://rhysd.github.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rhysd/tweet-app/issues"
  },
  "homepage": "https://github.com/rhysd/tweet-app#readme",
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/electron-window-state": "^2.0.33",
    "@types/jsdom": "^12.2.2",
    "@types/lodash.merge": "^4.6.5",
    "@types/mocha": "^5.2.6",
    "@types/mock-require": "^2.0.0",
    "@types/node": "^11.9.4",
    "@types/sinon": "^7.0.6",
    "@types/webdriverio": "^4.13.3",
    "electron": "^4.0.5",
    "electron-builder": "^20.38.5",
    "husky": "^1.3.1",
    "jsdom": "^13.2.0",
    "lodash.merge": "^4.6.1",
    "mocha": "^6.0.0",
    "mock-require": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.3.0",
    "parcel-bundler": "^1.11.0",
    "sinon": "^7.2.4",
    "spectron": "^5.0.0",
    "typescript": "^3.3.3"
  },
  "peerDependencies": {
    "electron": "^4.0.4"
  },
  "dependencies": {
    "commander": "^2.19.0",
    "electron-context-menu": "^0.11.0",
    "electron-window-state": "^5.0.3"
  },
  "build": {
    "appId": "io.github.rhysd.tweet",
    "asar": false,
    "forceCodeSigning": false,
    "files": [
      "bin/*.js",
      "main/*.js",
      "renderer/*.js"
    ],
    "extraResources": [
      {
        "from": "assets/icon",
        "to": "app/assets/icon"
      },
      {
        "from": "assets/images/wifi-off.svg",
        "to": "app/assets/images/wifi-off.svg"
      }
    ],
    "mac": {
      "identity": null,
      "icon": "assets/icon/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon/icon.png"
    },
    "linux": {
      "target": [
        "zip",
        "AppImage"
      ],
      "icon": "assets/icon/icon.png",
      "category": "Network"
    }
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test:unit -- --invert --grep 'searches tweet button with 4s timeout'"
    }
  }
}
